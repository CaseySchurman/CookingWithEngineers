<% provide(:title, @page_title) %>
<!-- Form allows user to reset password -->
<div class="content">
<span style="display: block;" class="fadeInDown animated">
    <span style="display: block; -webkit-animation-duration: 2.5s;" class="zoomIn animated">
      <h1 class="bigText wordsTransLighten ">Reset Password</h1>
    </span>
  </span>
  
      <!-- Requests a new password from user -->
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/errors', object: f.object  %>
      
      <!-- Adds email to page form hash -->
      <%= hidden_field_tag :email, @user.email %>
      <div class="textBoxCenter group">
        <span style="display: block; -webkit-animation-duration: 3.5s;" class="fadeInRightBounce animated">
      <!-- Adds password to page hash -->
        <%= f.password_field :password, class: 'input inputBlue form_control', required: true %>
        <%= content_tag :span, nil, :class => 'highlight' %>
        <%= content_tag :span, nil, :class => 'bar' %>
        <%= f.label :password %>
        </span>
      </div>
      <div/>
      <div class="textBoxCenter group">
        <span style="display: block; -webkit-animation-duration: 3.5s;" class="fadeInLeftBounce animated">
      <!-- Adds password confirm to pahe hash -->
        <%= f.password_field :password_confirmation, class: 'input inputBlue form_control', required: true %>
        <%= content_tag :span, nil, :class => 'highlight' %>
        <%= content_tag :span, nil, :class => 'bar' %>
        <%= f.label :password, "Re-Enter" %>
        </span>
      </div>
      <span style="display: block; -webkit-animation-duration: 3.5s;" class="fadeInUp animated">
      <div>
      <!-- Updates user password digest -->
        <%= f.submit "Update password", class: "button trans2 center buttonBoxBigger buttonText" %>
      </div>
      </span>
    <% end %>
  
</div>