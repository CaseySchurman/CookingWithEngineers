<% if true %>
  <%= form_tag recipes_path, :method => "get" do |f| %>
    <div class="RecipeTextBox input-append">
    <%= text_field_tag :search, params[:search], placeholder: "Recipe Name"%>
    <span id="advancedsearch" hidden>
    <%= text_field_tag :searchauthor, params[:searchauthor], placeholder: "Recipe Creator", class: "RecipeTextBox"%>
    <%= text_field_tag :searchingredients, params[:searchingredients], placeholder: "Ingredients"%>
    <p>Ingredient search: <%= check_box_tag :exclusive, 1, false, :class => "checklist squaredFour" %></p>
