<!-- User links for header, change based on login status -->
<%= link_to "Home", root_path, class: "headerLinks" %>
<%= link_to "All Recipes", recipes_path, class: "headerLinks" %>
<% if logged_in? %>
    <!-- Show user links (after login) -->  
    <%= link_to "My Recipes", current_user, class: "headerLinks" %>
    <%= link_to "Settings", edit_user_path(current_user), class: "headerLinks" %>
    <%= link_to "All Users", users_path, class: "headerLinks" %>
    <%= link_to "Logout", logout_path, method: :delete, class: "headerLinks" %>
<%else%>
    <!-- If user not logged in show login button -->
    <%= link_to "Log In", login_path, :class => "headerLinks" %>
    <%= link_to "Sign Up", register_path, class: "headerLinks" %>
<%end%>