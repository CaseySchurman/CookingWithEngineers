<div class = "content">
<div class="row">
  <h2 class = "darkText">Following | Followers</h2>
  <aside class="col-md-4">
    <section class="user_info">
      <h1>Username: <%= @user.username%></h1>
      <span><%= link_to "My Profile", @user %></span>
    </section>
    <br />
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <br />
    <br />
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <table class = "centerStyle">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tr>
            <td><%= link_to user.username, user %></td>
            <td><%= user.email %></td>
        </tr>
        <% end %>
      </table>
      <!--%= will_paginate % -->
    <% end %>
  </div>
</div>
</div>