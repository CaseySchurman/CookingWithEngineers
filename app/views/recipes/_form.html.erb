<!-- Form for editing and new recipes -->
  <h1>Create Recipe</h1>
  <br>
  <!-- Includes multipart for file uploading -->
  <%= form_for(@recipe, html: { multipart: true }) do |f| %>
  <div class = "group">
      <%=f.text_field :name, class: 'input', required: true %>
      <%= content_tag :span, nil, :class => 'highlight' %>
      <%= content_tag :span, nil, :class => 'bar' %>
      <%= f.label :name %>
    </div>
    <p>
    <h2>Add Image</h2>
    <span class="picture">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
    <p>
      <!-- Creates/Updates user recipe -->
      <%= f.submit @btnText, class: "button red center" %>
    </p>
  <% end %>
  <script type="text/javascript">
    $('#recipe_picture').bind('change', function() {
      size_in_megabytes = this.files[0].size/1024/1024;
      if(size_in_megabytes > 5) {
        alert('Maximum file size is 5MB.  Please choose a smaller file');
      }
    });
  </script>