<!--############################################################################
# Adds edit link if object is owned by current user.  Used specifically for 
# resources not directly belonging to user.
#############################################################################-->
<% if logged_in? %>
  <%= link_to 'edit', 
      edit_polymorphic_path(object), remote: true if current_user?(current_recipe.user) %>
      
  <!-- Adds delete link if object is owned by current user or admin user -->
  <% if admin || current_user?(current_recipe.user) %>            
    <%= link_to 'delete', object, method: :delete, remote: true,
                          data: { confirm: "Are you sure?"} %>
  <% end %>
<% end %>